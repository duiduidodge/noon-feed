# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/crypto_news?schema=public"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# Discord
DISCORD_BOT_TOKEN="your-discord-bot-token"
DISCORD_GUILD_ID="your-guild-id"
DISCORD_DEFAULT_CHANNEL_ID="your-default-channel-id"
DISCORD_WEBHOOK_URL="your-discord-webhook-url"

# Telegram (optional notification hub)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_CHAT_ID="your-telegram-chat-id"

# LLM Provider (openai or anthropic)
LLM_PROVIDER="openai"
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
LLM_MODEL="gpt-4-turbo-preview"

# Fetching
FETCH_USER_AGENT="CryptoNewsBot/1.0 (+https://github.com/your-repo)"
FETCH_TIMEOUT_MS="30000"

# Dashboard
DASHBOARD_AUTH_SECRET="change-this-to-a-secure-random-string"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-this-to-another-secure-random-string"

# API
API_PORT="3001"
API_HOST="0.0.0.0"

# Worker
WORKER_CONCURRENCY="3"
FETCH_INTERVAL_MINUTES="5"
ENABLE_BREAKING_NEWS_MODE="false"
BREAKING_NEWS_ALLOW_MEDIUM_IMPACT="true"
BREAKING_NEWS_MIN_IMPACT_SCORE="0.75"
BREAKING_NEWS_MIN_KEYWORD_MATCHES="1"
RELIABILITY_STALE_SOURCE_HOURS="12"
ENABLE_EMERGING_MOVERS_SIGNALS="false"
# Example:
# EMERGING_MOVERS_COMMAND="python3 /data/workspace/skills/emerging-movers/scripts/emerging-movers.py --json"
EMERGING_MOVERS_COMMAND=""
EMERGING_MOVERS_INTERVAL_SECONDS="60"
ENABLE_OPPORTUNITY_SIGNALS="false"
# Example:
# OPPORTUNITY_SIGNALS_COMMAND="python3 /data/workspace/skills/wolf-strategy/scripts/opportunity-scan-v6.py"
OPPORTUNITY_SIGNALS_COMMAND=""
OPPORTUNITY_SIGNALS_INTERVAL_SECONDS="300"
ENABLE_WHALE_SIGNALS="false"
WHALE_SIGNALS_INTERVAL_SECONDS="1800"
WHALE_RISK_PROFILE="moderate"

# Logging
LOG_LEVEL="info"
NODE_ENV="development"
