# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/crypto_news?schema=public"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# Discord
DISCORD_BOT_TOKEN="your-discord-bot-token"
DISCORD_GUILD_ID="your-guild-id"
DISCORD_DEFAULT_CHANNEL_ID="your-default-channel-id"

# LLM Provider (openai or anthropic)
LLM_PROVIDER="openai"
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
LLM_MODEL="gpt-4-turbo-preview"

# Fetching
FETCH_USER_AGENT="CryptoNewsBot/1.0 (+https://github.com/your-repo)"
FETCH_TIMEOUT_MS="30000"

# Dashboard
DASHBOARD_AUTH_SECRET="change-this-to-a-secure-random-string"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-this-to-another-secure-random-string"

# API
API_PORT="3001"
API_HOST="0.0.0.0"

# Worker
WORKER_CONCURRENCY="3"
FETCH_INTERVAL_MINUTES="5"

# Logging
LOG_LEVEL="info"
NODE_ENV="development"
